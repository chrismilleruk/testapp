  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "program": "${workspaceFolder}/node_modules/jest-cli/bin/jest.js",
      "args": [
          "-i"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test Runner",
      "program": "${workspaceFolder}/node_modules/jest-cli/bin/jest.js",
      "args": [
          "-i"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "console": "integratedTerminal"
    }
  ]
}